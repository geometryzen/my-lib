{
    "name": "@stemcstudio/my-lib",
    "version": "2.0.0",
    "description": "My Library",
    "browser": "dist/umd/index.js",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "system": "dist/system/index.js",
    "types": "dist/index.d.ts",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rollup -c",
        "clean": "trash .nyc_output && trash coverage && trash dist && trash docs && trash types",
        "coverage": "nyc mocha 'tests/**/*.spec.ts'",
        "docs": "npm run docs:typedoc && open-cli docs/index.html",
        "docs:typedoc": "trash docs && typedoc --options typedoc.json",
        "lint": "eslint . --ext .ts",
        "pages": "npm run docs:typedoc && gh-pages -d docs",
        "pretest": "npm run build",
        "prepublishOnly": "npm run build && npm run test && npm run lint && npm run pages",
        "test": "mocha 'tests/**/*.spec.ts'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/geometryzen/my-lib.git"
    },
    "author": "David Geo Holmes",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/geometryzen/my-lib/issues"
    },
    "homepage": "https://github.com/geometryzen/my-lib#readme",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@rollup/plugin-commonjs": "^22.0.2",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.4.0",
        "@types/chai": "^4.3.3",
        "@types/mocha": "^9.1.1",
        "@typescript-eslint/eslint-plugin": "^5.36.1",
        "@typescript-eslint/parser": "^5.36.1",
        "chai": "^4.3.6",
        "eslint": "^8.23.0",
        "gh-pages": "^4.0.0",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "open-cli": "^7.0.1",
        "rollup-plugin-dts": "^4.2.2",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-terser": "^7.0.2",
        "trash": "^8.1.0",
        "ts-node": "^10.9.1",
        "typedoc": "^0.23.14",
        "typescript": "^4.8.2"
    }
}
